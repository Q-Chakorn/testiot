# Production Environment Configuration for DataLogger Agent
# Copy this file to .env.prod and customize for your production environment

# Application Version
VERSION=1.0.0

# Database Configuration
DB_NAME=hotel_iot
DB_USER=postgres
DB_PASSWORD=your_secure_database_password_here
DB_PORT=5432
DB_SHARED_BUFFERS=512MB
DB_EFFECTIVE_CACHE_SIZE=2GB
DB_MAX_CONNECTIONS=200

# RabbitMQ Configuration
RABBITMQ_USER=datalogger
RABBITMQ_PASSWORD=your_secure_rabbitmq_password_here
RABBITMQ_VHOST=/hotel
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_QUEUE=iaq_data_queue
RABBITMQ_EXCHANGE=iot_data
RABBITMQ_ROUTING_KEY=sensor.iaq

# DataLogger Agent Configuration
BATCH_SIZE=200
BATCH_TIMEOUT=60.0
VALIDATOR_STRICT_MODE=true
LOG_LEVEL=INFO
DATALOGGER_REPLICAS=2

# Monitoring Configuration (optional)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=your_secure_grafana_password_here

# Data Storage Path
DATA_PATH=/opt/datalogger/data

# Security Settings
# Add any additional security configurations here