# IAQ Sensor Agent Dockerfile
# Multi-stage build for optimized production image

# Build stage
FROM --platform=$BUILDPLATFORM python:3.9-slim as builder

# Set build arguments
ARG BUILD_DATE
ARG VERSION=1.0.0
ARG VCS_REF
ARG TARGETPLATFORM
ARG BUILDPLATFORM

# Add metadata labels
LABEL maintainer="IAQ Agent Team" \
      org.label-schema.build-date=$BUILD_DATE \
      org.label-schema.name="iaq-sensor-agent" \
      org.label-schema.description="Indoor Air Quality Sensor Data Agent" \
      org.label-schema.version=$VERSION \
      org.label-schema.vcs-ref=$VCS_REF \
      org.label-schema.schema-version="1.0"

# Install system dependencies for building
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Production stage
FROM --platform=$TARGETPLATFORM python:3.9-slim as production

# Install runtime dependencies only
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Create non-root user for security
RUN groupadd -r iaqagent && useradd -r -g iaqagent -u 1000 iaqagent

# Set working directory
WORKDIR /app

# Copy Python packages from builder stage
COPY --from=builder /usr/local/lib/python3.9/site-packages /usr/local/lib/python3.9/site-packages
COPY --from=builder /usr/local/bin /usr/local/bin

# Copy application code
COPY --chown=iaqagent:iaqagent . .

# Create directories for data and logs
RUN mkdir -p /app/data /app/logs && \
    chown -R iaqagent:iaqagent /app/data /app/logs

# Set environment variables
ENV PYTHONPATH=/app \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    LOG_LEVEL=INFO \
    STATS_INTERVAL=60

# Expose health check port (if needed for monitoring)
EXPOSE 8080

# Add health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Switch to non-root user
USER iaqagent

# Set default command
CMD ["python", "main.py"]